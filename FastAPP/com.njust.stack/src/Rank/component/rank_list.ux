<script>
	import router from '@system.router'
	import fetch from '@system.fetch'
	export default {
		data: {
			props: [
				'rankinfos',
			]
		},
		press(item) {
			console.error("on press event param : " + item);
		},
    post: function (url, data) {
      return new Promise((resolve, reject) => {
        fetch.fetch({
          url: url,
          data: data,
          responseType: 'json',
          method: 'post',
          success: function (data) {
            console.log("post success");
            resolve(data);
          },
          fail: function (errmsg, errcode) {
            console.log("post fail");
            reject(errcode, errmsg);
          }
        });  
      })
    },
    like: function () {
      this.liked = !this.liked;
      if(this.liked === true) { 
        this.likedata += 1; 
        var date = new Date();
        var ltime = date.getFullYear()+"-"+(date.getMonth()+1)+"-"+date.getDate()+" "+date.getHours()+":"+date.getMinutes()+":"+date.getSeconds();
        this.post("http://114.116.248.233:12345/like/like_post", {"phonenum":this.$app.$def.data.phonenum, "pid":this.pid, "ltime":ltime});
      }
      else { 
        this.likedata -= 1;
        this.post("http://114.116.248.233:12345/like/unlike_post", {"phonenum":this.$app.$def.data.phonenum, "pid":this.pid});
      }
      // prompt.showToast({ message: this.liked === true ? 'like' : 'dislike', image: '/Common/logo.png' });
    },
		clickToUserDetail(pn) {
      if(pn===this.$app.$def.data.phonenum){
        router.push({
          uri: '/Mine'
        })
      }else{
        router.push({
          uri: "/UserDetail",
          params: {phonenum: pn}
        })        
      }
		},
		clickToPostDetail(pid) {
			router.push({
				uri: "/PostDetail",
				params: {pid: pid}
			})
		},
	}
</script>